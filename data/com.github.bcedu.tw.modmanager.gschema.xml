<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
	<schema id="com.github.bcedu.tw.modmanager.settings" path="/com/github/bcedu/tw/modmanager/settings/">
    <key type="i" name="window-width">
      <default>800</default>
      <summary>Window width</summary>
      <description>Window width</description>
    </key>
    <key type="i" name="window-height">
      <default>600</default>
      <summary>Window height</summary>
      <description>Window height</description>
    </key>
    <key type="i" name="window-posx">
      <default>0</default>
      <summary>Window hortitzontal position</summary>
      <description>Window hortitzontal position</description>
    </key>
    <key type="i" name="window-posy">
      <default>0</default>
      <summary>Window vertical position</summary>
      <description>Window vertical position</description>
    </key>
    <key type="i" name="window-state">
        <!-- 0 = normal, 1 = maximized -->
      <default>1</default>
      <summary>The saved state of the window</summary>
      <description>The saved state of the window</description>
    </key>
    <key type="s" name="default-game-path">
      <default>""</default>
      <summary>Path of TW</summary>
      <description>Path where Total War is installed</description>
    </key>
    <key type="s" name="default-user-script-path">
      <default>""</default>
      <summary>Location of user.script.txt</summary>
      <description>Path where user.script.txt file is located</description>
    </key>
	</schema>
</schemalist>
